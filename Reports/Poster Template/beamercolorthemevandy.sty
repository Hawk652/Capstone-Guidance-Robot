% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

\definecolor{vandygold}{cmyk}{0.10, .25, 0.80, 0.0}
\definecolor{vandyblack}{cmyk}{0.0, 0.0, 0.0, 1.00}
\definecolor{mitdarkgray}{cmyk}{0.48, 0.39, 0.39, 0.04}
\definecolor{mitlightgray}{cmyk}{0.24, 0.20, 0.20, 0.0}

% Extra colors
\definecolor{lightgray}{RGB}{240, 240, 240}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=vandyblack,bg=white}
\setbeamercolor{palette secondary}{fg=vandyblack,bg=white}
\setbeamercolor{palette tertiary}{bg=vandyblack,fg=white}
\setbeamercolor{palette quaternary}{fg=vandyblack,bg=white}
\setbeamercolor{structure}{fg=vandygold}

% Headline
\setbeamercolor{headline}{fg=vandygold,bg=vandyblack}
\setbeamercolor{headline title}{fg=vandygold}

% Block
\setbeamercolor{block title}{fg=vandygold,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=vandygold,bg=vandyblack}
\setbeamercolor{block alerted separator}{bg=vandygold}
\setbeamercolor{block alerted body}{fg=vandygold,bg=vandyblack}
\setbeamercolor{alerted text}{fg=vandygold}

% Heading
\setbeamercolor{heading}{fg=vandyblack}

% Itemize
%\setbeamercolor{item}{fg=vandyblack}

% Bibliography
\setbeamercolor{bibliography item}{fg=vandyblack}
\setbeamercolor{bibliography entry author}{fg=vandyblack}
\setbeamercolor{bibliography entry title}{fg=vandyblack}
\setbeamercolor{bibliography entry location}{fg=vandyblack}
\setbeamercolor{bibliography entry note}{fg=vandyblack}

% Caption
\setbeamercolor{caption}{fg=vandygold, bg=white}
\setbeamercolor{caption name}{fg=vandygold, bg=white}
