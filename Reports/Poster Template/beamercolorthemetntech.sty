% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

\definecolor{tntechgold}{cmyk}{0.0, .10, 1.00, 0.0}
\definecolor{tntechpurple}{cmyk}{0.80, 0.92, 0.0, 0.0}
\definecolor{mitdarkgray}{cmyk}{0.48, 0.39, 0.39, 0.04}
\definecolor{mitlightgray}{cmyk}{0.24, 0.20, 0.20, 0.0}

% Extra colors
\definecolor{lightgray}{RGB}{240, 240, 240}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=tntechpurple,bg=white}
\setbeamercolor{palette secondary}{fg=tntechpurple,bg=white}
\setbeamercolor{palette tertiary}{bg=tntechpurple,fg=white}
\setbeamercolor{palette quaternary}{fg=tntechpurple,bg=white}
\setbeamercolor{structure}{fg=tntechgold}

% Headline
\setbeamercolor{headline}{fg=tntechgold,bg=tntechpurple}
\setbeamercolor{headline title}{fg=tntechgold}

% Block
\setbeamercolor{block title}{fg=tntechpurple,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=tntechgold,bg=tntechpurple}
\setbeamercolor{block alerted separator}{bg=tntechgold}
\setbeamercolor{block alerted body}{fg=tntechgold,bg=tntechpurple}
\setbeamercolor{alerted text}{fg=tntechgold}

% Heading
\setbeamercolor{heading}{fg=tntechpurple}

% Itemize
%\setbeamercolor{item}{fg=tntechpurple}

% Bibliography
\setbeamercolor{bibliography item}{fg=tntechpurple}
\setbeamercolor{bibliography entry author}{fg=tntechpurple}
\setbeamercolor{bibliography entry title}{fg=tntechpurple}
\setbeamercolor{bibliography entry location}{fg=tntechpurple}
\setbeamercolor{bibliography entry note}{fg=tntechpurple}

% Caption
\setbeamercolor{caption}{fg=tntechpurple, bg=white}
\setbeamercolor{caption name}{fg=tntechpurple, bg=white}
